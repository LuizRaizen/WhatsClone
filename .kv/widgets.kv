<Conversations@Label+ButtonBehavior>:
    canvas.before:
        Color:
            rgb: TEAL_GREEN
        Rectangle:
            size: self.width - 2, 7
            pos: (self.center_x / 2) - 13, self.center_y - 39
    text: "CONVERSAS"
    text_size: self.size
    halign: "center"
    valign: "top"
    bold: True
    color: TEAL_GREEN
    font_size: "14sp"
    font_name: FREE_SANS_BOLD

<Status@Label+ButtonBehavior>:
    text: "STATUS"
    text_size: self.size
    halign: "center"
    valign: "top"
    bold: True
    color: ROLLING_STONE
    font_size: "14sp"
    font_name: FREE_SANS_BOLD

<Calls@Label+ButtonBehavior>:
    text: "CHAMADAS"
    text_size: self.size
    halign: "center"
    valign: "top"
    bold: True
    color: ROLLING_STONE
    font_size: "14sp"
    font_name: FREE_SANS_BOLD

# =============================  STATUS GUIDE =================================;

<StatusGuide@StatusGuide>:
    BoxLayout:
        orientation: "vertical"
        size_hint_y: None
        padding: 0, 20
        height: self.minimum_height
        StatusWidget:
            mode: "user"
        BoxLayout:
            size_hint_y: None
            height: 60
            Label:
                text: "Atualizações recentes"
                text_size: self.size
                font_size: "14sp"
                bold: True
                font_name: FREE_SANS_BOLD
                halign: "left"
                valign: "middle"
                padding: 20, 0
                color: GRAY_CHATEAU

<StatusWidget@StatusWidget>:
    size_hint_y: None
    height: 161
    CircularButton:
        source: "images/user.png"
        pos_hint: {"center_x": .12, "center_y": .5}
        on_release: root.on_button()
    Image:
        source: "images/add.png"
        size_hint: None, None
        size: 43, 43
        pos_hint: {"center_x": .175, "center_y": .255}
    Label:
        text: "Meu status"
        size_hint_x: None
        pos_hint: {"center_x": .485, "center_y": .66}
        width: 350
        text_size: self.size
        font_size: "16sp"
        font_name: FREE_SANS_BOLD
        color: WHITE_CHOCOLATE
        bold: True
        halign: "left"
        valign: "middle"
    BoxLayout:
        size_hint: .7, .2
        pos_hint: {"center_x": .59, "center_y": .34}
        spacing: 10
        Label:
            text: "Toque para adicionar seu status"
            text_size: self.size
            font_size: "16sp"
            font_name: FREE_SANS
            halign: "left"
            valign: "middle"
            color: GRAY_CHATEAU