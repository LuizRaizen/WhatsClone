<GuideMenu@GuideMenu>:
    size_hint_y: .18
    GuideButton:
        id: conv_button
        text: "CONVERSAS"
        font_size: "13sp"
        font_name: FREE_SANS_BOLD
        color: GRAY_CHATEAU
        group: "guides"
        state: "down"
        on_release: root.on_guide(self)
    GuideButton:
        id: status_button
        text: "STATUS"
        font_size: "13sp"
        font_name: FREE_SANS_BOLD
        color: GRAY_CHATEAU
        group: "guides"
        on_release: root.on_guide(self)
    GuideButton:
        id: calls_button
        text: "CHAMADAS"
        font_size: "13sp"
        font_name: FREE_SANS_BOLD
        color: GRAY_CHATEAU
        group: "guides"
        on_release: root.on_guide(self)

<ContactWidget@ContactWidget>:
    size_hint_y: None
    height: 161
    canvas.before:
        Color:
            rgb: EBONY_CLAY
        Rectangle:
            size: 525, 2
            pos: self.pos[0] + 172, self.pos[1]
    CircularButton:
        source: "images/user.png"
        pos_hint: {"center_x": .12, "center_y": .5}
        on_release: root.on_button()
    Label:
        text: "Nome do contato"
        size_hint_x: None
        pos_hint: {"center_x": .485, "center_y": .66}
        width: 350
        text_size: self.size
        font_size: "16sp"
        font_name: FREE_SANS_BOLD
        color: WHITE_CHOCOLATE
        bold: True
        halign: "left"
        valign: "middle"
    Label:
        text: "08/02/2020"
        font_size: "12sp"
        font_name: FREE_SANS
        text_size: self.size
        halign: "right"
        valign: "middle"
        color: GRAY_CHATEAU
        pos_hint: {"center_x": .46, "center_y": .66}
    BoxLayout:
        size_hint: .6, .2
        pos_hint: {"center_x": .54, "center_y": .34}
        spacing: 10
        BoxLayout:
            size_hint: None, None
            size: 36, 36
            Image:
                source: "images/received.png"
                color: PICTON_BLUE
                allow_stretch: True
                pos_hint: {"center_x": .5, "center_y": .5}
        Label:
            text: "Isto é um teste..."
            text_size: self.size
            font_size: "16sp"
            font_name: FREE_SANS
            halign: "left"
            valign: "middle"
            color: GRAY_CHATEAU

